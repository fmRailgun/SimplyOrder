<Window x:Class="SimplyOrder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimplyOrder"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.8*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="1.2*" />
            </Grid.ColumnDefinitions>

            <!--Menu sidebar-->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition  Height="*"/>
                    <RowDefinition  Height="*"/>
                    <RowDefinition  Height="*"/>
                    <RowDefinition  Height="*"/>
                    <RowDefinition  Height="*"/>
                    <RowDefinition  Height="*"/>
                    <RowDefinition  Height="*"/>
                    <RowDefinition  Height="*"/>
                    <RowDefinition  Height="*"/>
                </Grid.RowDefinitions>

                <Button x:Name="bestseller" Content="Bestsellers"  Grid.Row ="0"/>
                <Button Content="Burgers" Grid.Row ="1"></Button>
                <Button Content="Steaks" Grid.Row ="2"></Button>
                <Button Content="Salads &amp; Sandwichs" Grid.Row ="3"></Button>
                <Button Content="Appetizers &amp; Soups" Grid.Row ="4"></Button>
                <Button Content="Omelettes" Grid.Row ="5"></Button>
                <Button Content="Kids" Grid.Row ="6"></Button>
                <Button Content="Sides" Grid.Row ="7"></Button>
                <Button Content="Drinks" Grid.Row ="8"></Button>
                <Button Content="Desserts &amp; Shakes" Grid.Row ="9"></Button>

            </Grid>

            <!--Menu Middle-->
            <ScrollViewer Grid.Column="1">
                <StackPanel>
                    <Grid Width="Auto" Margin="10, 10, 10, 10" Height="100">
                        <Border BorderBrush="Black" BorderThickness="2"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="6*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <Image Margin="10, 10, 10, 10" Grid.Column="0"  Source=""/>
                            <TextBox Margin="10, 10, 10, 10" Grid.Column="1">Name</TextBox>
                            <TextBox Margin="10, 10, 10, 10" Grid.Column="2">Price</TextBox>
                        </Grid>
                    </Grid>
                    <Grid x:Name="Customize" Width="Auto" Margin="15, 0, 15, 10" Height="150" Visibility="Collapsed">
                        <Border BorderBrush="Black" BorderThickness="2"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="2*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <TextBox Margin="10, 10, 10, 10" Grid.ColumnSpan="3" Grid.Row="1">Description</TextBox>
                            <TextBox Margin="10, 10, 10, 10" Grid.Column="2">Price</TextBox>
                        </Grid>
                    </Grid>
                    <Grid Width="Auto" Margin="10, 10, 10, 10" Height="100">
                        <Border BorderBrush="Black" BorderThickness="2"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="6*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <Image Margin="10, 10, 10, 10" Grid.Column="0"  Source=""/>
                            <TextBox Margin="10, 10, 10, 10" Grid.Column="1">Name</TextBox>
                            <TextBox Margin="10, 10, 10, 10" Grid.Column="2">Price</TextBox>
                        </Grid>
                    </Grid>

                </StackPanel>
            </ScrollViewer>

            <!--Order Summary-->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="8*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>

                <ScrollViewer Grid.Row="0">
                    <StackPanel>

                    </StackPanel>
                </ScrollViewer>

                <Grid  Grid.Row="1">
                    <Button x:Name="send" Margin="70 40 10 10" Content="Send" Width="60" Height="30" Click="send_Click"/>
                </Grid>

            </Grid>

        </Grid>

        <!--Pop up-->
        <Grid x:Name="popup" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="6*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="8*" />
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>
            <Border BorderBrush="Black" BorderThickness="2" Grid.Row="1" Grid.Column="1">
                <Label Content="This is a pop-up"/>
            </Border>
        </Grid>
    </Grid>
</Window>
